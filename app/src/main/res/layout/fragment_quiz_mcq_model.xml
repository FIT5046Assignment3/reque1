<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizMcqModel">

    <TextView
        android:id="@+id/textViewMCQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="Multiple Choice Question"
        app:layout_constraintBottom_toTopOf="@+id/MCQbtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MCQbtn1"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:onClick="mcqOptionButton1"
        android:text="Answer 1"
        app:layout_constraintBottom_toTopOf="@+id/MCQbtn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MCQbtn2"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:onClick="mcqOptionButton2"
        android:text="Answer 2"
        app:layout_constraintBottom_toTopOf="@+id/MCQbtn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MCQbtn3"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:onClick="mcqOptionButton3"
        android:text="Answer 3"
        app:layout_constraintBottom_toTopOf="@+id/MCQbtn4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MCQbtn4"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:onClick="mcqOptionButton4"
        android:text="Answer 4"
        app:layout_constraintBottom_toTopOf="@+id/MCQbtn5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MCQbtn5"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:onClick="mcqOptionButton5"
        android:text="Answer 5"
        app:layout_constraintBottom_toTopOf="@+id/MCQbtn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MCQbtn6"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="20dp"
        android:onClick="mcqOptionButton6"
        android:text="Answer 6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>